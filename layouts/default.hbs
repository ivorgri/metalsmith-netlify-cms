<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}" />
</head>
<body>

    <header>
        Header
        
            <nav>
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    {{#if collections.pages.length }}
                        {{#each collections.pages}}
                        <li>
                            <a href="/{{path}}">{{order}} - {{ title }}</a>
                        </li>  
                        {{/each}}
                    {{/if}}
                </ul>
            </nav>
    </header>
    <h1>{{{ title }}}</h1>
    {{{ contents }}}

    <footer>
        <h2>Posts:</h2>
        {{#if collections.posts.length }}
        <ul>
            {{#each collections.posts}}
                <li>
                    <h3><a href="/{{path}}">{{ title }}</a></h3>
                    <p>{{ description }}</p>
                </li>
            {{/each}}
        </ul>
        {{/if}}
    </footer>
</body>
</html>